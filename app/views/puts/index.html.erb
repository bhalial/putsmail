<script>
	$(function(){
		$(".addCC").click(function(){
			var container = $("#copiesContainer");
			if(container.is(":visible")){
				$("#copiesContainer").hide(1000);
				$(this).text("more");
			} else {
				$("#copiesContainer").show(1000);
				$(this).text("less");				
			}
		});
	});
</script>
