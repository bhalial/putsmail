<form class="form-horizontal" action="/api/test_mails" method="post" name="form_test_email" id="form_test_email">
	<div class="control-group">
		<label class="control-label" for="test_mail_recipient0">Recipient #1:</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="test_mail_users0" name="test_mail_users_mail" value="pablo@pablocantero.com"  maxlength="40">
			<p class="help-block">Enter a valid e-mail address.</p>
		</div>
	</div>
	<div class="control-group test_mail_cc">		
		<label class="control-label" for="test_mail_recipient1">Recipient #2:</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="test_mail_users1" name="test_mail_users_mail" maxlength="40">
			<p class="help-block">Enter a valid e-mail address.</p>
		</div>
	</div>
	<div class="control-group test_mail_cc">		
		<label class="control-label" for="test_mail_recipient2">Recipient #3:</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="test_mail_users2" name="test_mail_users_mail" maxlength="40">
			<p class="help-block">Enter a valid e-mail address.</p>
		</div>
	</div>
	<div class="control-group test_mail_cc">		
		<label class="control-label" for="test_mail_recipient3">Recipient #4:</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="test_mail_users3" name="test_mail_users_mail" maxlength="40">
			<p class="help-block">Enter a valid e-mail address.</p>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="input01">Subject:</label>
		<div class="controls">
			<input type="text" class="input-xlarge" id="test_mail_subject" name="subject"  value="PutsMail - Test Mail">
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="textarea">Body:</label>
		<div class="controls">
			<textarea class="input-xxlarge" id="test_mail_body" name="body" rows="14" >Hey ho, let's go.</textarea>
			<p class="help-block">Paste your HTML here.</p>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<div id="html_warnings"></div>
		</div>
	</div>
	<div class="form-actions">
		<button class="btn" id="button_preview">Preview</button>
		<button class="btn" id="button_check_mail">Check your HTML</button>
		<button class="btn btn-primary" id="button_send">Send</button>
	</div>
</form>